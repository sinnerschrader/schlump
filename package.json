{
  "name": "schlump",
  "version": "0.14.0",
  "description": "A static site generator utilizing reactjs",
  "bin": {
    "schlump": "./src/cli.js"
  },
  "main": "./src/index.js",
  "scripts": {
    "linter": "xo",
    "start": "npm run watch:site",
    "test": "nyc --all --reporter lcov ./node_modules/.bin/ava",
    "commitmsg": "conventional-changelog-lint -e",
    "release": "standard-version --no-verify",
    "postrelease": "git push --follow-tags origin master && npm publish",
    "presite": "rimraf ./docs/* && lessc --clean-css ./node_modules/elemental/less/elemental.less docs/statics/elemental.styles.css",
    "site": "./src/cli.js --src ./site --dest ./docs --var.foo=bar --scoped-css=./docs/statics/scoped.css --css-variables --template-import='elemental:UI'",
    "watch:site": "chokidar '{index,cli}.js' 'src/**' 'site/**' --initial --command 'npm run site'",
    "watch:test": "npm test -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sinnerschrader/schlump.git"
  },
  "keywords": [
    "staticsite",
    "site",
    "reactjs",
    "github",
    "pages",
    "gh",
    "pages",
    "gh-pages"
  ],
  "engines": {
    "node": ">=6"
  },
  "author": "Markus Wolf",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sinnerschrader/schlump/issues"
  },
  "homepage": "https://github.com/sinnerschrader/schlump#readme",
  "dependencies": {
    "babel-core": "^6.14.0",
    "babel-generator": "^6.17.0",
    "babel-plugin-transform-react-jsx": "^6.8.0",
    "camelcase": "^4.0.0",
    "chalk": "^1.1.3",
    "common-tags": "^1.3.1",
    "commonmark": "^0.26.0",
    "commonmark-react-renderer": "^4.3.1",
    "css": "^2.2.1",
    "decamelize": "^1.2.0",
    "figures": "^2.0.0",
    "globby": "^6.0.0",
    "gray-matter": "^2.0.2",
    "htmlparser": "^1.7.7",
    "meow": "^3.7.0",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "require-all": "^2.0.0",
    "resolve-from": "^2.0.0",
    "sander": "^0.5.1",
    "semver": "^5.3.0",
    "soupselect": "^0.2.0",
    "upper-case-first": "^1.1.2"
  },
  "devDependencies": {
    "ava": "^0.17.0",
    "chokidar-cli": "^1.2.0",
    "conventional-changelog-lint": "^1.0.1",
    "cz-customizable": "^4.0.0",
    "elemental": "^0.6.1",
    "husky": "^0.11.8",
    "less": "^2.7.1",
    "less-plugin-clean-css": "^1.5.1",
    "nyc": "^10.0.0",
    "react-addons-css-transition-group": "^15.3.2",
    "rimraf": "^2.5.4",
    "standard-version": "^3.0.0",
    "xo": "^0.17.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "./.cz-config.js"
    }
  },
  "ava": {
    "files": [
      "src/**/*.test.js"
    ],
    "source": [
      "src/**/*.js"
    ]
  },
  "nyc": {
    "exclude": [
      "node_modules",
      "coverage",
      "site"
    ]
  }
}
